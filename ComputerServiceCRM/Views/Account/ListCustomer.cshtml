@model IList<Data.Models.CustomerData>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<p>
    @Html.ActionLink("Yeni Müşteri", "CreateCustomer")
</p>
<table id="grid" class="table">
    <tr>
        <th>
            Firma Adı
        </th>
        <th>
            Ad
        </th>
        <th>
            Soyad
        </th>
        <th>
            E-Posta
        </th>
        <th>
            Telefon
        </th>
        <th>
            Tarih
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CompanyName @*@Html.DisplayFor(modelItem => item.CompanyName)*@
            </td>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.CreatedAt
            </td>
            <td>
                @Html.ActionLink("Güncelle", "EditCustomer", new { customerId = item.ID }) |
                @Html.ActionLink("Sil", "DeleteCustomer", new { customerId = item.ID })
            </td>
        </tr>
    }
</table>
<script>
    $(document).ready(function () {
        $("#grid").kendoGrid({
            height: 550,
            sortable: false,
        });
    });
</script>
