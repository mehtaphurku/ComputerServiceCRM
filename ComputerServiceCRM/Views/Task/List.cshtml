@model IList<Data.Models.TaskData>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<p>
    @Html.ActionLink("Yeni Vakka", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Vakka Adı
        </th>
        <th>
            Vakka Açıklaması
        </th>
        <th>
            Tarih
        </th>
        <th> Tamamlayan Kullanıcı </th>
      
        <th> Tamamlanma Notu</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.CreateDate
            </td>
            <td>
                @{
                    if (item.UserData != null)
                    {
                        <span>@item.UserData.FirstName @item.UserData.LastName</span>
                    }
                }
            </td>
            <td>
                @item.CompletingNote
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { taskId=item.ID }) |
                @Html.ActionLink("Sil", "Delete", new { taskId = item.ID })
            </td>
        </tr>
    }

</table>
